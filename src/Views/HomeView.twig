{% extends "/templates/layout.twig" %}

{% block navbarContent %}
<a href="../public/index.php"><img src="../public/data/img/logo-jf-1-resize.png" alt=""></a>
    {% if isAdmin %}
        <div class="inline">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a href="#publishChapter" class="text-dark navbar-nav-link">Chapitres publiés</a>
                    <a href="#pendingChapter" class="text-dark navbar-nav-link">Chapitres en attente</a>
                    <a href="#commentModeration" class="text-dark navbar-nav-link">Modération commentaires</a>
                </li>
            </ul>
        </div>
        <a href="../public/index.php?page=getLogout" class="btn btn-danger">Déconnexion</a>
    {% else %}
        <div class="inline">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a href="#publishChapter" class="text-dark navbar-nav-link">Accéder aux chapitres</a>
                    <a href="" class="text-dark navbar-nav-link">A propos</a>
                    <a href="" class="text-dark navbar-nav-link">Contact</a>
                </li>
            </ul>
        </div>
        <a href="../public/index.php?page=getLogin">
            <button class="btn btn-outline-danger">Connexion</button>
        </a>
    {% endif %}
{% endblock  navbarContent %}

{% block mainHeader %}
    <img src="../public/data/img/alaska-3.jpg" alt="" class="main-header-img">
    <div class="main-header-container container ">
        <div class="main-header-jumbotron jumbotron ">
            <h1 class="display-4 bold">Bienvenue visiteur</h1>
        </div>
    </div>
{% endblock %}

{% block main %}
<section id="publishChapter" class="container">
    {% for chapter in publishedChaptersList %}
        <div class="card my-4 text-center">
            <h2 class="card-header">{{ chapter.title }}</h2>
            <p class="card-body">
                Posté le 
                <span class="font-italic">{{ chapter.createDate }}</span> 
                par 
                <span class="font-italic">{{ chapter.author }}</span>
            </p>
            <p class="text-center-justify"> {{ chapter.content | slice(0, 100)}}...<p>
            <a href="../public/index.php?page=single&chapterId={{ chapter.id }}" class="btn btn-info my-3">
                Lire le chapitre
            </a>
        </div>
    {% else %}
        <h2 class="card-header">Pas de chapitre trouvé</h2>
    {% endfor %}
</section>
{% endblock %}